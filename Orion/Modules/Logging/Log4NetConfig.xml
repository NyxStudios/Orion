<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="orion/logs/orion.log"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <preserveLogFileNameExtension value="true" />
      <countDirection value="-1" />
      <maxSizeRollBackups value="-1" />
      <datePattern value="'.'dd-MM-yyyy" />
      <maximumFileSize value="300MB" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date{yyyy-MM-dd [HH:mm:ss]} [%t] %p: %m %n"/>
      </layout>
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="FATAL" />
        <foreColor value="Red" />
        <backColor value="White" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="[Orion] [%level] %message%n"/>
      </layout>
    </appender>

    <logger name="FileLog">
      <level value="INFO" />
      <appender-ref ref="LogFileAppender" />
    </logger>

    <logger name="ConsoleLog">
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
    </logger>

  </log4net>
</configuration>